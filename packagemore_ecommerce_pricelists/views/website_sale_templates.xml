<odoo>
    <data>

    <template id="product_quantity_packmo" inherit_id="website_sale.product">
        <div id="o_wsale_cta_wrapper"  position="replace">
            <div id="o_wsale_cta_wrapper" class="d-flex flex-wrap align-items-center">
                <t t-set="hasQuantities" t-value="true"/>
                <t t-set="hasBuyNow" t-value="false"/>
                <t t-set="ctaSizeBig" t-value="not hasQuantities or not hasBuyNow"/>

                <t t-set="lines" t-value="pricelist.item_ids.filtered(lambda line: line.product_tmpl_id == product)"/>
                <t t-set="min_qty" t-value="int(min(lines.mapped('min_quantity'))) if lines and min(lines.mapped('min_quantity')) > 0 else 1"/>
                <t t-set="has_price" t-value="len(lines) > 0 or combination_info['price'] > 0.0"/>
                <input name="qty-input" t-att-value="min_qty" class="d-none"/>

                <div t-attf-class="css_quantity_packmo input-group d-inline-flex me-2 mb-2 align-middle #{'input-group-lg' if ctaSizeBig else ''}" t-if="has_price"  contenteditable="false">
                    <a t-attf-href="#" class="btn btn-link js_add_cart_json" aria-label="Remove one" title="Remove one">
                        <i class="fa fa-minus"></i>
                    </a>
                    <input type="text" class="form-control quantity text-center" t-att-data-min="min_qty" name="add_qty" t-att-value="add_qty or min_qty"/>
                    <a t-attf-href="#" class="btn btn-link float_left js_add_cart_json" aria-label="Add one" title="Add one">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
                <div id="add_to_cart_wrap_2" t-if="has_price" t-attf-class="{{'d-flex' if combination_info else 'd-none'}} align-items-center mb-2 me-auto">
                    <a data-animation-selector=".o_wsale_product_images" role="button" id="add_to_cart" t-attf-class="btn btn-primary js_check_product a-submit flex-grow-1 #{'btn-lg' if ctaSizeBig else ''}" href="#">
                        <i class="fa fa-shopping-cart me-2"/>
                        <span style="font-weight: bold">ADD TO CART</span>
                    </a>
                </div>
                <div id="product_option_block" class="d-flex flex-wrap w-100"/>
            </div>
        </div>
    </template>

    <template id="pricelist_prices">
        <t t-set="curr_prilst" t-value="website.pricelist_id"/>
        <t t-set="lines" t-value="curr_prilst.item_ids.filtered(lambda line: line.product_tmpl_id == product)"/>
        <t t-if="lines">
            <div>
                <t t-foreach="lines" t-as="line">
                    <div>$<span t-esc="line.fixed_price"/> per unit for a minimum quantity of <span t-esc="int(line.min_quantity)"/></div>
                </t>
                <br/>
            </div>
        </t>
        <t t-if="not lines and not combination_info['price']">
            <h3 class="fst-italic" t-field="website.prevent_zero_price_sale_text"/>
        </t>
    </template>

    <template id="product_price_inehrit_package_more" inherit_id="website_sale.product_price">
        <xpath expr="//div" position="inside">
            <t t-call="packagemore_ecommerce_pricelists.pricelist_prices"/>
        </xpath>
        <xpath expr="//div[@id='product_unavailable']/h3" position="replace">
            <t t-call="packagemore_ecommerce_pricelists.pricelist_prices"/>
        </xpath>
    </template>
    </data>
</odoo>
