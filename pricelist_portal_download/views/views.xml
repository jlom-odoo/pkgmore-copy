<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_partner_form_view_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_product_pricelist']" position="after">
                    <field name="allow_pricelist_download"/>
                    <field name="show_product_stock" attrs="{'invisible': [('allow_pricelist_download', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pricing_setting_container']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box"
                         title="Show product barcode in the portal pricelist download">
                        <div class="o_setting_left_pane">
                            <field name="show_barcode_in_pricelist"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_barcode_in_pricelist"/>
                            <div class="text-muted">Show Barcode Col. in Portal Pricelist Download</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box"
                         title="Show product stock in the portal pricelist download">
                        <div class="o_setting_left_pane">
                            <field name="show_stock_in_pricelist"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_stock_in_pricelist"/>
                            <div class="text-muted">Show Stock Col. in Portal Pricelist Download</div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>